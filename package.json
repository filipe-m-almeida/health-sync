{
  "name": "health-sync",
  "version": "0.2.5",
  "type": "module",
  "description": "Node.js port of health-sync",
  "files": [
    "bin",
    "src",
    "README.md",
    "health-sync.example.toml"
  ],
  "bin": {
    "health-sync": "bin/health-sync.js"
  },
  "scripts": {
    "start": "node ./bin/health-sync.js",
    "check": "node --check ./bin/health-sync.js && node --check ./src/cli.js",
