    "release": "npm run release:npm && npm run release:clawhub"
  },
  "dependencies": {
    "@iarna/toml": "^2.2.5",
    "@mariozechner/pi-tui": "^0.53.0",
    "better-sqlite3": "^11.9.1",
    "chalk": "^5.6.2"
  },
  "engines": {
    "node": ">=20"
  }
}
